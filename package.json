{
	"name": "shoot",
	"version": "1.0.0",
	"description": "Activitypub federated instant messaging server",
	"main": "dist/bootstrap.js",
	"scripts": {
		"start": "node --enable-source-maps dist/src/bootstrap.js",
		"start:http": "node --enable-source-maps dist/src/http/bootstrap.js",
		"start:gateway": "node --enable-source-maps dist/src/gateway/bootstrap.js",
		"start:media": "node --enable-source-maps dist/src/media/bootstrap.js",
		"start:push": "node --enable-source-maps dist/src/push/worker.js",
		"start:inbound_queue": "node --enable-source-maps dist/src/receiver/index.js",
		"cli": "node --enable-source-maps dist/src/cli/index.js",
		"build": "tsc",
		"prepare": "husky || true",
		"openapi": "node --enable-source-maps dist/src/scripts/openapi.js",
		"test": "c8 --all --src ./src --exclude-after-remap ava",
		"lint": "npx @biomejs/biome check --write src"
	},
	"author": "MaddyUnderStars",
	"license": "AGPL-3.0-or-later",
	"devDependencies": {
		"@ava/typescript": "^5.0.0",
		"@biomejs/biome": "^2.2.4",
		"@types/bcrypt": "^5.0.2",
		"@types/config": "^3.3.3",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.10.2",
		"@types/pg": "^8.11.6",
		"@types/sinon": "^17.0.3",
		"@types/supertest": "^6.0.2",
		"@types/web-push": "^3.6.4",
		"@types/ws": "^8.5.13",
		"ava": "^6.2.0",
		"c8": "^10.1.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0",
		"sinon": "^19.0.2",
		"supertest": "^7.0.0",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "^7.3.0",
		"@aws-sdk/client-s3": "^3.717.0",
		"@aws-sdk/s3-request-presigner": "^3.717.0",
		"activitypub-types": "github:spacebarchat/activitypub-types#dist",
		"bcrypt": "^6.0.0",
		"body-parser": "^2.2.0",
		"bullmq": "^5.34.4",
		"config": "^4.0.0",
		"cors": "^2.8.5",
		"domutils": "^3.2.2",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.0",
		"fast-xml-parser": "^4.5.1",
		"htmlparser2": "^10.0.0",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.1",
		"oembed-providers": "github:iamcal/oembed",
		"pg": "^8.13.1",
		"rabbitmq-stream-js-client": "^0.6.2",
		"ts-deepmerge": "^7.0.2",
		"typeorm": "^0.3.27",
		"typeorm-cursor-pagination": "^0.10.1",
		"uuid": "^11.0.3",
		"web-push": "^3.6.7",
		"ws": "^8.18.0",
		"zod": "^3.25.76"
	},
	"lint-staged": {
		"*.{ts,js,md}": "npx @biomejs/biome check --write --no-errors-on-unmatched --files-ignore-unknown=true --colors=off {staged_files}"
	},
	"optionalDependencies": {
		"bufferutil": "^4.0.8"
	},
	"ava": {
		"typescript": {
			"rewritePaths": {
				"src/": "dist/src/",
				"test/": "dist/test/"
			},
			"compile": "tsc"
		},
		"files": [
			"test/**",
			"!test/helpers/**",
			"!test/**/*.disabled"
		],
		"require": [
			"./test/helpers/force_exit.mjs"
		]
	}
}